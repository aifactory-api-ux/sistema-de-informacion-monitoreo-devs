# DevPulse - Environment Variables Example
# Copy this file to .env and fill in the values

# Database Configuration
POSTGRES_USER=devpulse
POSTGRES_PASSWORD=devpulse123
POSTGRES_DB=devpulse
DATABASE_URL=postgresql://devpulse:devpulse123@localhost:5432/devpulse

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# External API Keys (optional - mock implementations will be used if empty)
EXTERNAL_API_GITHUB_TOKEN=ghp_your_github_token_here
EXTERNAL_API_GITLAB_TOKEN=glpat_your_gitlab_token_here
EXTERNAL_API_JIRA_TOKEN=your_jira_api_token
EXTERNAL_API_JIRA_URL=https://your-company.atlassian.net

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# Application Environment
ENVIRONMENT=development

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
